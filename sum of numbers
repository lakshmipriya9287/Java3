import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int i, N;
        int sum=0;
        N=sc.nextInt();
        for(i=1;i<=N;i++)
        {
            sum=sum+i;
        }
        {
            System.out.print(sum);
        }
       
        }
        
        
    }

       
